<% layout('layouts/boilerplate') %>

<div class="row justify-content-center mt-5">
    <div class="col-lg-8 col-md-10">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-body p-4">
                <h3 class="text-center mb-4 text-warning fw-bold">✏️ Edit Listing</h3>
                <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation"
                enctype="multipart/form-data">
                    
                    <!-- Title -->
                    <div class="mb-3">
                        <label for="title" class="form-label fw-semibold">Title</label>
                        <input type="text" name="listing[title]" value="<%= listing.title %>" 
                               class="form-control form-control-lg rounded-2 shadow-sm" required>
                    </div>

                    <!-- Description -->
                    <div class="mb-3">
                        <label for="description" class="form-label fw-semibold">Description</label>
                        <textarea name="listing[description]" rows="3" 
                                  class="form-control rounded-2 shadow-sm" required><%= listing.description %></textarea>
                    </div>

                    <div class="mb-3">
                        <img src="<%= original %>" alt="">
                    </div>

                    <!-- Image -->
                    <div class="mb-3">
                        <label for="image" class="form-label fw-semibold">Upload Image</label>
                        <input type="file" name="listing[image]"
                               class="form-control rounded-2 shadow-sm">
                    </div>

                    <!-- Price & Country -->
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label fw-semibold">Price (₹)</label>
                            <input type="number" name="listing[price]" value="<%= listing.price %>" 
                                   class="form-control rounded-2 shadow-sm" required>
                        </div>
                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label fw-semibold">Country</label>
                            <input type="text" name="listing[country]" value="<%= listing.country %>" 
                                   class="form-control rounded-2 shadow-sm" required>
                        </div>
                    </div>

                    <!-- Location -->
                    <div class="mb-3">
                        <label for="location" class="form-label fw-semibold">Location</label>
                        <input type="text" name="listing[location]" value="<%= listing.location %>" 
                               class="form-control rounded-2 shadow-sm" required>
                    </div>

                    <!-- Submit Button -->
                    <div class="text-center">
                        <button type="submit" 
                                class="btn btn-warning-gradient px-5 py-2 fw-bold shadow-sm rounded-2">
                            ✨ Update Listing
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>